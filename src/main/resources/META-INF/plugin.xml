<idea-plugin>
    <id>melabsinthiatum.kotlin-mpp-shared-items-browser</id>
    <name>Kotlin MPP shared items browser</name>
    <vendor email="mel.absinthiatum@gmail.com">MelAbsinthiatum</vendor>

    <description>The Intellij IDEA plugin displaying an expect-actual elements tree with navigation to these items in
        code by click.
    </description>

    <depends>org.jetbrains.kotlin</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceInterface="com.melabsinthiatum.services.persistence.TreeSettingsComponent"
                            serviceImplementation="com.melabsinthiatum.services.persistence.TreeSettingsComponent"/>

        <toolWindow id="Expect-Actual Interface" secondary="false" icon="/com/melabsinthiatum/shared_items_icon.svg"
                    anchor="right"
                    factoryClass="com.melabsinthiatum.sharedElementsTree.toolWindow.MppToolWindowFactory" order="last"/>

        <postStartupActivity implementation="com.melabsinthiatum.services.extensionPoints.CustomStartupActivity"/>
    </extensions>

    <actions>
        <action id="com.melabsinthiatum.actions.RefreshTreeAction" class="com.melabsinthiatum.actions.RefreshTreeAction"
                text="Refresh"/>
        <action id="com.melabsinthiatum.actions.TreeSettingsAction"
                class="com.melabsinthiatum.actions.TreeSettingsAction" text="Tree settings"
                description="Shared elements tree settings"/>
    </actions>
</idea-plugin>
